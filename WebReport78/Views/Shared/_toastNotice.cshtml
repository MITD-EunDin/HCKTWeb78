@{
}
@if (TempData["Success"] != null)
{
    <div class="toast align-items-center text-bg-success border-0 position-fixed top-0 end-0 m-3" role="alert" aria-live="assertive" aria-atomic="true" style="z-index: 1055;">
        <div class="d-flex">
            <button type="button" class="btn-check me-2 m-auto " data-bs-dismiss="toast" aria-label="Check"></button>
            <div class="toast-body">
                <span class="fs-4">
                    ✅
                </span>
                @TempData["Success"]
            </div>
            <button type="button" class="btn-close btn-warning me-2 m-auto " data-bs-dismiss="toast" aria-label="Close"></button>
        </div>
    </div>
}
@if (TempData["Error"] != null)
{
    <div class="toast align-items-center text-bg-danger border-0 position-fixed top-0 end-0 m-3" role="alert" aria-live="assertive" aria-atomic="true" style="z-index: 1055;">
        <div class="d-flex">
            <div class="toast-body">
                <span class="fs-4">
                    ⛔
                </span>
                @TempData["Error"]
            </div>
            <button type="button" class="btn-close me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
        </div>
    </div>
}